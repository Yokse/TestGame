#include <iostream>
#include <math.h>
#include <conio.h>
#include <stdlib.h>

double a;
double b;
double c;

using namespace std;

int main(){
    comienzo:
 	cout << "Introduzca la ecuacion de forma Ax*x + Bx + C" << "\n" << endl;
 	cout << "A: ";
 	cin >> a;
 	cout << "B: ";
 	cin >> b;
 	cout << "C: ";
 	cin >> c;
 	double discriminante = (b*b)-(4*a*c);
 	cout << "Discriminante: " << discriminante << endl;
	if (discriminante < 0){
 		cout << "\n" << "No tiene soluciones reales" << endl;
 	}
	else if (discriminante == 0){
 		cout << "\n" << "El valor de 'x' es:" << "\n" << endl;
		cout << ((-b) + sqrt(discriminante))/(2*a) << endl;
 	}
 	else{
 	cout <<"\n" << "El valor de 'x' es:" << "\n" << endl;
	cout << ((-b) + sqrt(discriminante))/(2*a) << endl;
	cout << ((-b) - sqrt(discriminante))/(2*a) << endl;
 	}
 	Final:
 	int opcion;
 	cout << "\n" << "Â¿Quieres resolver otra ecuacion? Escriba 1 para decir si y 2 para decir no" << "\n" << endl;
 	cin >> opcion;
 	switch(opcion){
 		case (1):
 			system("cls");
 			goto comienzo;
 			break;
 		case (2):
 			cout << "\n" << "Gracias por usar la aplicacion, espero que haya sido util para usted" << endl;
 			getch();
 			return 0;
 			break;
 		default:
 			cout << "Esa no es una opcion valida" << endl;
 			getch();
 			system("cls");
 			goto Final;
 	}
}
