#include <iostream>
#include <conio.h>
#include <stdio.h>
#include <string.h>
#define ESPACIOS 75
using namespace std;

void pintarAvion(int x);

char avion_11[]={' ',' ',' ','^',' ',' ',' ',0};
char avion_12[]={' ','|','*','*','*','|',' ',0};
char avion_13[]={'|','*',' ','*',' ','*','|',0};

char CampoDeMovimientoX[]={' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',' ',0};
char  MoverseX[ESPACIOS]="";

int main(){

	char tecla;
	int a,d, horizontal=35;
	do{
		pintarAvion(horizontal);
		tecla = getch();
		if(tecla == 'a' && horizontal > 1){
			horizontal -= 2;
		}
		if(tecla == 'd' && horizontal < 71){
			horizontal += 2;
		}
		system("cls");
	}while(1==1);
	getch();
}



void pintarAvion(int x){
	strcpy(MoverseX,CampoDeMovimientoX);
	MoverseX[x]=0;
	
	printf(MoverseX); puts(avion_11);
	printf(MoverseX); puts(avion_12);
	printf(MoverseX); puts(avion_13);
}
